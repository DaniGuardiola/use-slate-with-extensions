{
  "version": "0.1.4",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "release": "standard-version --sign",
    "prerelease": "yarn lint && yarn build"
  },
  "peerDependencies": {
    "react": ">=16",
    "slate": "^0.60.2",
    "slate-history": "^0.60.2",
    "slate-hyperscript": "^0.60.2",
    "slate-react": "^0.60.2"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "use-slate-with-extensions",
  "author": "Luke Murray",
  "module": "dist/use-slate-with-extensions.esm.js",
  "size-limit": [
    {
      "path": "dist/use-slate-with-extensions.cjs.production.min.js",
      "limit": "2 KB"
    },
    {
      "path": "dist/use-slate-with-extensions.esm.js",
      "limit": "2 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@size-limit/preset-small-lib": "^4.9.2",
    "@storybook/addon-essentials": "^6.1.16",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.1.16",
    "@storybook/addons": "^6.1.16",
    "@storybook/react": "^6.1.16",
    "@tippyjs/react": "^4.2.0",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "babel-loader": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.0.8",
    "pinst": "^2.1.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "size-limit": "^4.9.2",
    "slate": "^0.60.2",
    "slate-history": "^0.60.2",
    "slate-hyperscript": "^0.60.2",
    "slate-react": "^0.60.2",
    "standard-version": "^9.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^4.14.2",
    "**/@typescript-eslint/parser": "^4.14.2"
  },
  "private": false,
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
